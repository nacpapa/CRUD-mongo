<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounder-0">
        <h1 class="text-center">Edit task</h1>
        <form action="/task/{{task._id}}/edit" method="POST">
          <div class="mb-3">
            <input
              class="form-control rounder-0 bg-dark text-white"
              type="text"
              name="title"
              placeholder="Title"
              value="{{task.title}}"
            />
          </div>

          <textarea
            class="mb-3 form-control rounder-0 bg-dark text-white"
            name="description"
            placeholder="Add a description"
            rows="3"
          >{{task.description}}</textarea>
          <button class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>